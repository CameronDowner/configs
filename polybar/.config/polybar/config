[settings]
throttle-output = 1
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = false

[colors]
background = #1A1E23
foreground = #C5C8C6
foreground_alternative = #5F819D
active = #005b96
warning	= #CC6666

[bar/core]
top = true
width = 100%
height = 25
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

enable-ipc = true

background = ${colors.background}
foreground =  ${colors.foreground}

line-size = 4

padding-left = 3
padding-right = 3

module-margin-left = 2.5
module-margin-right = 2.5

font-0 = Input:fontformat=monospaced:size=9;1

modules-left = i3 xwindow
modules-center = date
modules-right = volume battery

tray-position = right
tray-padding = 0
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-detached = false
tray-transparent = false
tray-color = #1D1F21

wm-restack = i3
override-redirect = false

[module/i3]
type = internal/i3
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.foreground_alternative}

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.active}
label-focused-padding = 4

label-unfocused = %index%
label-unfocused-padding = 2

label-visible = %index%
label-visible-underline = ${colors.foreground}
label-visible-padding = 3

label-urgent = %index%
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}
label-urgent-underline = ${colors.warning}
label-urgent-padding = 2

[module/xwindow]
type = internal/xwindow
label-maxlen = 100

[module/date]
type = internal/date
interval = 1

format = <label>
format-prefix-foreground = ${colors.foreground}

label = %date% %time%

date = %a %d %B

time = %H:%M
time-alt = %H:%M:%S

[module/volume]
type = internal/volume

format-muted-background = ${colors.background}
format-volume-background = ${colors.background}
format-volume-foreground = ${colors.foreground_alternative}
format-volume = Volume: <label-volume>
label-muted = Muted
label-volume-foreground = ${colors.foreground}

[global/wm]
margin-top = 5
margin-bottom = 5

[module/battery]
type = internal/battery
full-at = 100

battery = BAT0
adapter = AC
poll-interval = 5

time-format = %H:%M

format-charging = Charging: <label-charging>
format-discharging = Discharging: <label-discharging>
format-full = Battery: <label-full>

format-charging-foreground = ${colors.foreground_alternative}
format-discharging-foreground = ${colors.foreground_alternative}
format-full-foreground = ${colors.foreground_alternative}

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = Fully charged

label-charging-foreground = ${colors.foreground}
label-discharging-foreground = ${colors.foreground}
label-full-foreground = ${colors.foreground}
